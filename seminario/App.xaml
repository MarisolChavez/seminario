<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="seminario.App">
    <Application.Resources>
        <Color x:Key="PKColor">#6CE8EB</Color>
        <Style x:Key="btn-primary" TargetType="Button">
            <Setter Property="BackgroundColor" Value="{StaticResource PKColor}"/>
            <Setter Property="Margin" Value="80,0"/>
        </Style>
        <!--estilo de botones-->
        <Style x:Key="btn-green"  TargetType="Button">
            <Setter Property="BackgroundColor" Value="Green"/>
            <Setter Property="Margin" Value="80,0"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="CornerRadius" Value="50"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>
    </Application.Resources>
</Application>